# ============================================
# Environment Configuration
# ============================================
# Copy this file to .env and adjust values as needed

# ============================================
# FRONTEND (Vercel)
# ============================================
# API URL for the backend server
# For local development: http://localhost:8000
# For production: https://your-render-app.onrender.com
VITE_API_URL=http://localhost:8000

# ============================================
# BACKEND (Render)
# ============================================
# Server Configuration
PORT=8000
HOST=0.0.0.0

# Logging
LOG_LEVEL=INFO
VERBOSE=true

# Model Configuration
MODEL_NAME=bilstm_crf_model.pkl
MODEL_PATH=./models/bilstm_crf_model.pkl

# Data Paths
DATA_DIR=./data
MODELS_DIR=./models
SCRIPTS_DIR=./scripts

# Training Parameters
RANDOM_STATE=42
TEST_SPLIT_RATIO=0.2
MAX_ITERATIONS=200

# Feature Extraction
SHORT_SYLLABLE_THRESHOLD=2
LONG_SYLLABLE_THRESHOLD=4
